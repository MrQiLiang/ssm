<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lq.dao.WechatRuleDao">
    <!-- namespace命名空间，作用是对sql进行分类化管理，理解sql隔离 -->
    <!-- 注意：使用mapper代理方法开发 ,namespace有着特殊作用-->

    <sql id="column_list">
        create_user_id,reply_type,create_time,update_user_id,rule_name,wechat_info_id,update_time,id,status
    </sql>

    <select id="findOne" resultType="com.lq.entity.WechatRule" parameterType="long">
        SELECT <include refid="column_list"/>
          FROM  wechat_rule
        WHERE id=#{id} AND status = 1
    </select>

    <select id="findAll" resultType="com.lq.entity.WechatRule">
        SELECT <include refid="column_list"/>
          FROM  wechat_rule
        WHERE status = 1
        ORDER BY create_time DESC
    </select>

    <select id="count" resultType="int">
        SELECT count(id)
          FROM wechat_rule
        WHERE status = 1
    </select>

    <insert id="save"  parameterType="com.lq.entity.WechatRule" useGeneratedKeys="true" keyProperty="id">

        <selectKey keyProperty="id" order="AFTER" resultType="Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO
            wechat_rule(create_user_id,reply_type,create_time,update_user_id,rule_name,wechat_info_id,update_time,id,status)
        VALUES
            (
              #{createUserId},#{replyType},#{createTime},#{updateUserId},#{ruleName},#{wechatInfoId},#{updateTime},#{id},#{status}
            )
    </insert>


    <update id="update" parameterType="com.lq.entity.WechatRule">
        UPDATE
            wechat_rule
        <trim prefix="set" suffixOverrides=",">
            
 <if test="createUserId!=null">create_user_id=#{createUserId},</if>
 <if test="replyType!=null">reply_type=#{replyType},</if>
 <if test="createTime!=null">create_time=#{createTime},</if>
 <if test="updateUserId!=null">update_user_id=#{updateUserId},</if>
 <if test="ruleName!=null">rule_name=#{ruleName},</if>
 <if test="wechatInfoId!=null">wechat_info_id=#{wechatInfoId},</if>
 <if test="updateTime!=null">update_time=#{updateTime},</if>
 <if test="id!=null">id=#{id},</if>
 <if test="status!=null">status=#{status},</if>
        </trim>
        WHERE
            id=#{id}
    </update>

    <update id="delete" parameterType="Long">
        UPDATE
            wechat_rule
        SET
           status = 0
        WHERE
            id=#{id}
    </update>

    <select id="findByWechatInfoIdAndStatus" resultType="com.lq.entity.WechatRule" >
      SELECT  <include refid="column_list"/>
        FROM wechat_rule
      WHERE
        wechat_info_id = #{wechatInfoId}
      AND
        status = #{status}
      ORDER BY create_time DESC
    </select>

</mapper>